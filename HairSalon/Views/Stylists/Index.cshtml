@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1><span class="accent-color">Stylists</span> at Eau Calires's Salon</h1>
@if(Model.Count == 0)
{
  <p class="info">There are no Stylists yet</p>
}
<ul class="verticle-list">
  @foreach(Stylist stylist in Model)
  {
    <li class="link large-font">@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
  }
</ul>
<div class="button-group">
  <p class="button margin-right">@Html.ActionLink("Add a Stylist", "Create")</p> 
  <p class="button">@Html.ActionLink("Home", "Index", "Home")</p> 
</div>
