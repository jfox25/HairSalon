@{
  Layout = "_Layout";
}
@using HairSalon.Models;
<h1><span class="accent-color">Clients</span> at Eau Calires's Salon</h1>
@if(ViewBag.StylistCount == 0)
{
  <p class="info">There are no Stylists yet, Please add one</p>
  <p class="button">@Html.ActionLink("Add a Stylist", "Create", "Stylists")</p> 
}
else
{
  @if(Model.Count == 0)
  {
    <p class="info">There are no Clients yet</p>
  }
  else 
  {
  <ul class="verticle-list">
    @foreach(Client client in Model)
    {
      <li class="link large-font">@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId })</li>
    }
  </ul>
}
<div class="button-group">
  <p class="button margin-right">@Html.ActionLink("Add a Client", "Create")</p> 
  <p class="button">@Html.ActionLink("Home", "Index", "Home")</p> 
</div>
}

