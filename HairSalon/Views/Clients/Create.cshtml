@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>Add a new client</h1>
@using (Html.BeginForm())
{
  <div>
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name)
  </div>
  <div>
  @if(ViewBag.fromStylistId != 0)
  {
    
    <p>Stylist : @ViewBag.StylistName</p>
    <input id="StylistId" name="StylistId" value="@ViewBag.fromStylistId" type="hidden">
    <input id="returnToStylist" name="returnToStylist" value="true" type="hidden">
  }
  else
  {
    <label>Stylist </label>
    @Html.DropDownList("StylistId")
  }
  </div>
  <input class="submit-button" type="submit" value="Add new Client" />
}
<div class="button-group">
  <p class="button margin-right">@Html.ActionLink("Show all Clients", "Index")</p>
  <p class="button">@Html.ActionLink("Home", "Index", "Home")</p> 
</div>