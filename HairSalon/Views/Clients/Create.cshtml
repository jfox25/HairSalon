@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @if(ViewBag.fromStylistId != 0)
  {
    <p>Stylist : @ViewBag.StylistName</p>
    <input id="StylistId" name="StylistId" value="@ViewBag.fromStylistId" type="hidden">
    <input id="returnToStylist" name="returnToStylist" value="true" type="hidden">
  }
  else
  {
    @Html.DropDownList("StylistId")
  } 
  <input type="submit" value="Add new Client" />
}
<p>@Html.ActionLink("Show all Clients", "Index")</p>