@{
  Layout = "_Layout";
}
@using HairSalon.Models
@model HairSalon.Models.Client

<h1>Client Details</h1>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>
<h3>Stylist : @Html.ActionLink($"{ViewBag.StylistName}", "Details", "Stylists" , new { id = Model.StylistId })</h3>
<h3>Appointments</h3>
@if(Model.Appointments.Count == 0)
{
  <p class="info">There are no appointments for this client yet.</p>
}
<ul>
  @foreach (Appointment appointment in Model.Appointments)
  {
    <li>@Html.ActionLink($"{appointment.Time}", "Details", "Appointments" , new { id = appointment.AppointmentId })</li>
  }
</ul>
<form class="delete-form" action="/clients/delete/@Model.ClientId" method="post">
  <button class="delete-button" type="submit" name="button">X</button>
</form>
<p>@Html.ActionLink("Edit Client", "Edit",  new {id = Model.ClientId})</p>
<p>@Html.ActionLink("Back to list", "Index")</p>